<tryton>
    <data>
        <record model="ir.ui.view" id="session_logs_view_form">
            <field name="model">ir.session.log</field>
            <field name="type">form</field>
            <field name="name">session_logs_form</field>
        </record>

        <record model="ir.ui.view" id="session_logs_view_tree">
            <field name="model">ir.session.log</field>
            <field name="type">tree</field>
            <field name="name">session_logs_list</field>
        </record>

        <record model="ir.action.act_window" id="act_session_logs_form">
            <field name="name">Session Logs</field>
            <field name="type">ir.action.act_window</field>
            <field name="res_model">ir.session.log</field>
        </record>

        <record model="ir.action.act_window.view" 
            id="act_session_logs_form_view1">
            <field name="sequence" eval="1"/>
            <field name="view" ref="session_logs_view_tree"/>
            <field name="act_window" ref="act_session_logs_form"/>
        </record>

        <record model="ir.action.act_window.view" 
            id="act_session_logs_form_view2">
            <field name="sequence" eval="2"/>
            <field name="view" ref="session_logs_view_form"/>
            <field name="act_window" ref="act_session_logs_form"/>
        </record>

        <record model="ir.model.access" id="access_session_logs">
            <field name="model" search="[('model', '=', 'ir.session.log')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        
        <!-- Login Audit Menu -->
        <menuitem name="Login Audit" id="menu_login_audit"
            parent="res.menu_res" action="act_session_logs_form"/>

        <record model="ir.ui.menu-res.group" id="menu_login_audit_group_admin">
            <field name="menu" ref="menu_login_audit"/>
            <field name="group" ref="res.group_admin"/>
        </record>

    </data>
</tryton>
